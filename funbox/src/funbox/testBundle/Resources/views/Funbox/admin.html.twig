<!DOCTYPE html>
<html class="no-js">
  <head>
    <title>{% block title %}Fun-Box - Admin Panel{% endblock %}</title>
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/older.css') }}" rel="stylesheet" />
    <meta charset="UTF-8" />
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <script src="{{ asset('js/modernizr.min.js') }}" type="text/javascript"></script>
  </head>
  <body>
    <div class="header">
      <h1>
        Привет, Котейка-Админ!
      </h1>
    </div>
    <div class="container">
      <div class="admin-show">

      {% if type == 'add' %}
        {{ form_start(addForm) }}
        {{ form_widget(addForm) }}
        {{ form_end(addForm) }}
      {% endif %}

      {% if type == 'edit' %}
      {% form_theme editForm  'funboxtestBundle:Funbox:errors.html.twig' %}
        {{ form_start(editForm) }}
        {{ form_widget(editForm) }}
        {{ form_end(editForm) }}
      {% endif %}

      {% if type == 'delete' %}
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        {{ form_end(deleteForm) }}
      {% endif %}

      {% if type == 'show' %}
        <a href="{{ path('funboxtest_addAdminPage') }}">Добавить</a>
        <table>
          <tr>
            <th>№</th>
            <th>Наполнитель</th>
            <th>Описание</th>
            <th>Количество</th>
            <th>Подпись</th>
            <th>Изменить</th>
            <th>Удалить</th>
          </tr>
        {% for product in editFormProducts %}
          <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.topping }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.quantity }}</td>
            <td>{{ product.footer }}</td>
            <td>
              <a class="edit" href="{{ path('funboxtest_editAdminPage', {id: product.id}) }}">Изменить</a>
            </td>
            <td>
              <a class="delete" href="{{ path('funboxtest_deleteAdminPage', {id: product.id}) }}">Удалить</a>
            </td>
          </tr>
        {% endfor %}
      {% endif %}
      </div>
    </div>
    <script src="{{ asset('js/script.min-dist.j') }}s" type="text/javascript"></script>
    <!--[if IE 9]>
    <script type="text/javascript">
      $("body").addClass("ie");
    </script>
    <![endif]-->
  </body>
</html>
